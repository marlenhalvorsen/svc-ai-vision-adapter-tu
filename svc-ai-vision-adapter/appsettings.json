{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Recognition": {
    "DefaultProvider": "google",
    "Region": null,
    "MaxResults": 5,
    "Features": [
      "LogoDetection",
      "TextDetection",
      "ObjectLocalization",
      "WebDetection"
    ]
  },
  "Kafka": {
    "Consumer": {
      "BootstrapServers": "localhost:9092", //placeholder until real address
      "GroupId": "svc-ai-vision-adapter",
      "Topic": "RecognitionRequested",
      "EnableAutoCommit": true
    },
    "Producer": {
      "BootstrapServers": "localhost:9092", //placeholder until real address
      "Topic": "RecognitionCompleted",
      "Acks": "All",
      "MessageSendMaxRetries": 3
    }
  }
}
